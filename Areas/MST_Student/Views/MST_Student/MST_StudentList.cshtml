@using WebApplication4.Areas.MST_Student.Models;
@using System.Data;
@model DataTable;

@section Scripts
	{
	<script>
		function checkDelete() {
			if (confirm("Are you sure want to delete this Student?")) {
				return true;
			}
			else {
				return false;
			}
		}
	</script>
}

<html>
	<body>
		<div>
			<a asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentAdd" class="btn btn-success">Add Student</a>
			<a asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentSearch" class="btn btn-primary">Search Student</a>
		</div>
		<table class="table mt-3 border border-dark">
			<thead>
				<tr>
					<th scope="col">StudentID</th>
					<th scope="col">StudentName</th>
					<th scope="col">MobileNoStudent</th>
					<th scope="col">Email</th>
					<th scope="col">MobileNoFather</th>
					<th scope="col">Address</th>
					<th scope="col">BirthDate</th>
					<th scope="col">Age</th>
					<th scope="col">IsActive</th>
					<th scope="col">Gender</th>
					<th scope="col">Password</th>
					<th scope="col">Created</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@{
					if (Model.Rows.Count > 0)
					{
						foreach (DataRow dr in Model.Rows)
						{
							<tr>
								<td>@dr["StudentID"]</td>
								<td>@dr["StudentName"]</td>
								<td>@dr["MobileNoStudent"]</td>
								<td>@dr["Email"]</td>
								<td>@dr["MobileNoFather"]</td>
								<td>@dr["Address"]</td>
								<td>@dr["BirthDate"]</td>
								<td>@dr["Age"]</td>
								<td>@dr["IsActive"]</td>
								<td>@dr["Gender"]</td>
								<td>@dr["Password"]</td>
								<td>@Convert.ToDateTime(@dr["Created"]).ToString("dd-MM-yyyy")</td>
									<td>
										<a asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentEdit" asp-route-StudentID="@dr["StudentID"]" class="btn btn-primary">Edit</a>
										<a asp-area="MST_Student" asp-controller="MST_Student" asp-action="MST_StudentDelete" asp-route-StudentID="@dr["StudentID"]" class="btn btn-danger">Delete</a>
									</td>
							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="5" class="text-center">
								<p class="col-form-label">No Records Found!</p>
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</body>
</html>