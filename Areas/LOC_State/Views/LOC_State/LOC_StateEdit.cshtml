@using WebApplication4.Areas.LOC_State.Models;
@using System.Data;
@model LOC_StateModel;

<html>
	<body>
	<form method="post" asp-area="LOC_State" asp-controller="LOC_State" asp-action="LOC_StateEditFormPage">
			<table class="table mt-3 border border-dark">
				<thead>
					<tr>
						<th scope="col">Insert State Details</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<label>CountryID:</label>
						<input type="text" value="@ViewBag.CountryID" id="countryID" name="countryID" required />
						</td>
					</tr>
					<tr>
						<td>
							<label>StateName:</label>
							<input type="text" value="@ViewBag.StateName" id="stateName" name="stateName" required />
						</td>
					</tr>
					<tr>
						<td>
							<label>StateCode:</label>
							<input type="text" value="@ViewBag.StateCode" id="stateCode" name="stateCode" required />
						</td>
					</tr>
					<tr>
						<td>
							<input class="btn btn-primary" type="submit" value="Update" />
						</td>
					</tr>
				</tbody>
			</table>
		</form>
	</body>
</html>